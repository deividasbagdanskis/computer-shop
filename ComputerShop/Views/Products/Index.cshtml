@model IEnumerable<ComputerShop.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Laptops</h1>
<div class="card-deck">
    @foreach (var item in Model)
    {
    <div class="col-sm-3">
            <div class="card">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="@Url.Content($"~/images/{item.Image}")" class="card-img-top mx-auto" alt="..." style="width: 160px;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Price&euro;</p>
                    </div>
                </a>
                <a class="btn btn-primary" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" asp-route-quantity="1">Add to cart</a>
            </div>
    </div>
    }

</div>
