@model IEnumerable<ComputerShop.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Laptops</h1>
<div class="card-deck">
    @foreach (var item in Model)
    {
    <div class="col-sm-3">
        <div class="card">
            <img src="@Url.Content($"~/images/{item.Image}")" class="card-img-top mx-auto" alt="..." style="width: 160px;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Price&euro;</p>
                <button type="button" class="btn btn-primary">Add to cart</button>
            </div>
        </div>
    </div>
    }

</div>
