@model ComputerShop.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content($"~/images/{Model.Image}")" style="width: 400px"/>
        </div>
        <div class="col-md-6">
            <p class="col-sm-2 mb-1" style="font-weight: 700;">
                @Html.DisplayNameFor(model => model.Description)
            </p>              
            <p class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </p>
            <p class="col-sm-2 mb-1" style="font-weight: 700;">
                @Html.DisplayNameFor(model => model.Price)
            </p>
            <p class="col-sm-10">
                @Model.Price&euro;
            </p>
            <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id">
                <div class="form-group col-sm-10">
                    <label for="quantity">Quantity:</label>
                    <input id="quantity" name="quantity" type="number" value="1" size="2" />
                </div>
                <div class="form-group col-sm-10">
                    <input type="submit" value="Add to cart" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
